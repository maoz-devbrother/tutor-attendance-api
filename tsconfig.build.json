{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] }
  },
  "include": ["src/**/*.ts", "index.ts"],
  "exclude": ["node_modules", "prisma/seed.ts"]
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Branch {
  id       String         @id @default(cuid())
  code     String         @unique
  name     String
  courses  CourseBranch[]
  sessions Session[]
}

model Subject {
  id      String   @id @default(cuid())
  code    String   @unique
  name    String
  courses Course[]
}

model Course {
  id            String         @id @default(cuid())
  subjectId     String
  subject       Subject        @relation(fields: [subjectId], references: [id])
  title         String
  totalSessions Int
  branches      CourseBranch[]
  enrollments   Enrollment[]
  sessions      Session[]
}

model CourseBranch {
  courseId String
  branchId String
  course   Course @relation(fields: [courseId], references: [id])
  branch   Branch @relation(fields: [branchId], references: [id])

  @@id([courseId, branchId])
}

model Student {
  id          String       @id @default(cuid())
  code        String       @unique
  fullName    String
  phone       String?
  enrollments Enrollment[]
  attendance  Attendance[]
}

model Enrollment {
  id                String  @id @default(cuid())
  studentId         String
  courseId          String
  sessionsPurchased Int
  sessionsAttended  Int     @default(0)
  student           Student @relation(fields: [studentId], references: [id])
  course            Course  @relation(fields: [courseId], references: [id])

  @@unique([studentId, courseId])
}

model Session {
  id       String       @id @default(cuid())
  courseId String
  branchId String
  startAt  DateTime
  endAt    DateTime
  teacher  String?
  course   Course       @relation(fields: [courseId], references: [id])
  branch   Branch       @relation(fields: [branchId], references: [id])
  records  Attendance[]

  @@index([startAt])
  @@index([branchId])
}

enum AttendanceStatus {
  PRESENT
  ABSENT
  LEAVE
}

model Attendance {
  id        String           @id @default(cuid())
  sessionId String
  studentId String
  status    AttendanceStatus
  note      String?
  session   Session          @relation(fields: [sessionId], references: [id])
  student   Student          @relation(fields: [studentId], references: [id])

  @@unique([sessionId, studentId])
}
